<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO NUEVA PERSONA</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post">
                        <div class="input-group mt-2">
                            <label class="input-group-text" for="name">Nombre</label>
                            <input type="text" class="form-control" name="name" id="name" value="{{persona.name}}" placeholder="Ejemplo: Luis Angel" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label class="input-group-text" for="lastname">Apellidos</label>
                            <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Ejemplo: Fernandez" value="{{persona.lastname}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label class="input-group-text" form="age">Edad</label>
                            <input type="number" class="form-control" name="age" id="age" value="{{persona.age}}" placeholder="0" required>
                        </div>
                        <div class="input-group mt-2">
                            <label class="input-group-text" for="tipoPersona">Tipo de persona</label>
                            <select class="form-select" name="tipo_persona_id" id="tipo_persona_id" required>
                                <option value="{{persona.tipo_persona_id}}">{{persona.tipo_nombre}}</option>
                                {{#if tipos}}
                                {{#each tipos}}
                                <option value="{{id}}">{{tipo}}</option>
                                {{/each}}
                                {{else}}
                                <option>No hay tipos de persona</option>
                                {{/if}}
                            </select>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>